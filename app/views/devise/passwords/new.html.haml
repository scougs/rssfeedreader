.front-page
  - if current_user
    = render 'feeds/index'

  - else
    .home-page-heading.clearfix

    .home-page-body.clearfix
      .span6.home-left
        .home-left-inner
          %img.logo{:alt => "logo", :src => "/assets/freederlogo2.jpg"}


      .span6.home-right
        %br
        %br
        %br
        
        %h2 Forgot your password?
        %br
        
        .login
          = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
            = devise_error_messages!
            %div
              = f.email_field :email, :autofocus => true, :placeholder => "Enter Your Email"
              %br
              %br
              
              
            %div= f.submit "Send me reset password instructions", class: "btn btn-info"
          = render "devise/shared/links"
          %br
          %br
          %br
          %br
          %br
          %br
          %br
          %br
          %br
          
 


