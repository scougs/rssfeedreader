<div class="front-page">

<!--   <div class="home-logo span12">
    <h1>LOGO</h1>
  </div> -->

  <div class="home-left span6">
    <h2>TEXT</h2>
  </div>

  <div class="home-right span6">
    <h2>Sign in</h2>
    <br>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= f.email_field :email, :autofocus => true, :placeholder => "Enter Your Email Address"%><br>
      <%= f.password_field :password, :placeholder => "Enter Your Password" %><br>

      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <% end %>

    <%= f.submit "Sign In", class: "sign-in-button btn-large btn-info" %>
    <br>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>

</div>